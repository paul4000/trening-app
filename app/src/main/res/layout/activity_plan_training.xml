<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.assistant.workout_assistant.PlanTrainingActivity">

    <TextView
        android:id="@+id/setSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="@string/set_date"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chosenDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="date"
            android:textSize="22sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/changeDateButton"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chosenDate"
            android:text="@string/change_button" />

        <TextView
            android:id="@+id/chosenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chosenDate"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="time"
            android:textSize="22sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/changeTimeButton"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/changeDateButton"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chosenTime"
            android:text="@string/change_button" />

        <Button
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>

</LinearLayout>
