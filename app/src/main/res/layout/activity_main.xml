<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.assistant.workout_assistant.MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/helloText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/hello_text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/browseTrain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/browse_trainings" />

        <Button
            android:id="@+id/browseMyTrain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/browse_yours_trainings" />

        <Button
            android:id="@+id/browsePlannedTrain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/browse_planned_trainings" />

    </LinearLayout>


</RelativeLayout>
