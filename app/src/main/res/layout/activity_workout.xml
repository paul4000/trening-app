<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.assistant.workout_assistant.activities.WorkoutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAZWA TRENINGU" />


            <ListView
                android:id="@+id/training_exercises"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFO O KONCU!" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ZANIECHAJ"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Zakoncz"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
